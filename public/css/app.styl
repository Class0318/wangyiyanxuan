#headerContainer
  width 100%
  height 44px
  .container
    display flex
    align-items center  
    .logo
      height 20px
      margin-left 12px
    .search
      display flex
      align-items center
      justify-content center
      background #EDEDED
      color #666666
      border 1px solid #EDEDED
      margin: 10px 8px;
      border-radius: 4px;
      padding: 4px 8px;
    .login_denglu
    .placeholder
      font-size 14px
      padding 2px 8px
      .login
        font-size 12px
        width 30px
        height 14px
        line-height 14px
        color #B4282D
        border 1px solid #B4282D
        padding 2px 2px
        border-radius 5px
        text-align center
#listContainer
  width 100%
  height 30px
  display flex
  .item
    font-size 14px
    color #333333
    margin: 7px 13px
  .icon-icon_arrow_right
    position: absolute;
    top: 49px;
    right: 16px;
    font-size: 20px;
    color #333333
  .item_red
    color red  

#swiper
  .swiper_pic
    width 100%
    height 185px  
#logistics 
  width 100%
  height 36px
  display flex
  align-items center
  .logistics_item
    color #333333
    margin-right: 16px;
    margin-left: 9px;
    .iconfont
      color red
    span 
      font-size 12px
#classify
  width 100%
  height 170px
  display flex
  flex-wrap wrap
  .classify_item
    width 55px
    height 78px
    margin: 5px 10px;
    img
      width 55px
      height 55px
    span 
      font-size 10px
      text-align center
      margin-left: 7px;
#advertising
  width 100%
  height 63px
  .img
    width 100%
    height 100%
#footer
  display flex
  width 100%
  height 49px
  position fixed
  left 0
  bottom 0
  background white
  .footer_item
    display flex
    width 20%
    height 35px
    flex-direction column
    align-items center
    margin 7px
  .iconfont
    font-size 20px
  span 
    font-size 12px
    margin 3px
  .footer_item_i
    color red
  .icon-weibiaoti-
    color red
#bargain
  width 100%
  height 288px
  padding 20px 20px
  box-sizing border-box
  .bargain_list
    width 100%
    display flex
    flex-wrap wrap
    .bargain_item
      margin 2px 1px
      background #F5F5F5
      width 49%
      height 132px
      .bargain_big 
        font-size 16px
        color #333333
        margin 10px 10px
      .bargain_small
        font-size 12px
        color #7F7F7F
        margin-top: 7px;
        margin: 10px 10px;
      img 
        width 75px
        height 75px
.swiper-container {
    width 100%
    height: 185px;
}

    

      
  

    
  


  
  
  

 
